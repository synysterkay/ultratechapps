# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to Git!

# DeepSeek API (for content generation)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Dev.to API Key (get from https://dev.to/settings/extensions)
DEVTO_API_KEY=your_devto_api_key_here

# Hashnode API Token (get from https://hashnode.com/settings/developer)
HASHNODE_TOKEN=your_hashnode_token_here

# Bluesky (your login credentials)
BLUESKY_USERNAME=your_username.bsky.social
BLUESKY_PASSWORD=your_bluesky_password_here

# GitHub (for committing blog posts)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=username/repo-name
GITHUB_BRANCH=main

# GitHub Pages blog path (relative to repo root)
BLOG_PATH=_posts
